generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String    @id
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  favorite  favorite[]  @relation("users")
}

model media {
  id          String    @id
  title       String
  description String
  type        MediaType
  releaseYear Int
  genre       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  favorite    favorite[] @relation("media")
}

model favorite {
  id        String    @id
  userId    String
  mediaId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  user      users     @relation("users", fields: [userId], references: [id])
  media     media     @relation("media", fields: [mediaId], references: [id])

  @@unique([userId, mediaId])
  @@index([userId])
  @@index([mediaId])
}

enum MediaType {
  movie
  series
}
